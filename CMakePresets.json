{
    "version": 2,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/out/soldat",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"RelWithDebInfo",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/out/soldat_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-coverage-clang",
            "displayName": "DebugCoverage",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/out/soldat_debug_coverage",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fprofile-instr-generate -fcoverage-mapping",
                "CMAKE_C_FLAGS": "-fprofile-instr-generate -fcoverage-mapping"
            }
        },
        {
            "name": "debug-g++",
            "displayName": "DebugG++",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "debug-emcc",
            "displayName": "DebugEmcc",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/out/soldat_emcc_debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "/usr/lib/emscripten/cmake/Modules/Platform/Emscripten.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Release Clang",
            "configurePreset": "default",
            "configuration": "Release Clang"
        },
        {
            "name": "debug",
            "displayName": "Debug Clang",
            "configurePreset": "debug",
            "configuration": "Debug Clang"
        },
        {
            "name": "debug coverage",
            "displayName": "Debug Clang Coverage",
            "configurePreset": "debug-coverage-clang",
            "configuration": "Debug Clang Coverage"
        },
        {
            "name": "debug g++",
            "displayName": "Debug G++",
            "configurePreset": "debug-g++",
            "configuration": "Debug G++"
        },
        {
            "name": "debug emcc",
            "displayName": "Debug emcc",
            "configurePreset": "debug-emcc",
            "configuration": "Debug emcc"
        }
    ]
}
