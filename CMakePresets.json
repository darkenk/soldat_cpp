{
    "version": 2,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/out/soldat",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"RelWithDebInfo",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/out/soldat_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-coverage-clang",
            "displayName": "Debug Coverage",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/out/soldat_debug_coverage",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "--coverage",
                "CMAKE_EXE_LINKER_FLAGS": "--coverage"
            }
        },
        {
            "name": "debug-gcc",
            "displayName": "Debug GCC",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "debug-coverage-gcc",
            "displayName": "Debug Coverage Gcc",
            "inherits": "debug-gcc",
            "binaryDir": "${sourceDir}/build/out/soldat_debug_coverage_gcc",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-coverage",
                "CMAKE_EXE_LINKER_FLAGS": "-coverage"
            }
        },
        {
            "name": "debug-emcc",
            "displayName": "DebugEmcc",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/out/soldat_emcc_debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "/usr/lib/emscripten/cmake/Modules/Platform/Emscripten.cmake"
            }
        },
        {
            "name": "utbot_cpp",
            "displayName": "Utbot_cpp",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/out/soldat_utbot",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"RelWithDebInfo",
                "CMAKE_C_COMPILER": "/utbot_distr/install/bin/clang",
                "CMAKE_CXX_COMPILER": "/utbot_distr/install/bin/clang++",
                "CMAKE_AR": "/utbot_distr/install/bin/llvm-ar",
                "CMAKE_LINKER": "/utbot_distr/install/bin/llvm-link",
                "CMAKE_NM": "/utbot_distr/install/bin/llvm-nm",
                "CMAKE_OBJDUMP": "/utbot_distr/install/bin/llvm-objdump",
                "CMAKE_RUNLIB": "/utbot_distr/install/bin/llvm-ranlib",
                "CMAKE_OBJCOPY": "/utbot_distr/install/bin/llvm-objcopy",
                "CMAKE_EXPORT_LINK_COMMANDS": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Release Clang",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "debug",
            "displayName": "Debug Clang",
            "configurePreset": "debug",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        },
        {
            "name": "debug_clang_coverage",
            "displayName": "Debug Clang Coverage",
            "configurePreset": "debug-coverage-clang",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        },
        {
            "name": "debug_gcc",
            "displayName": "Debug GCC",
            "configurePreset": "debug-gcc",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        },
        {   
            "name": "debug_coverage_gcc",
            "displayName": "Debug GCC Coverage",
            "configurePreset": "debug-coverage-gcc",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        },
        {
            "name": "debug emcc",
            "displayName": "Debug emcc",
            "configurePreset": "debug-emcc",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        },
        {
            "name": "utbot_cpp",
            "displayName": "Utbot_cpp",
            "configurePreset": "utbot_cpp",
            "configuration": "Debug",
            "targets": ["SoldatGame"]
        }
    ]
}
